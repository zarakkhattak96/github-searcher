{
	"$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": [
			"node_modules/*",
			"dist/*",
			".idea/*",
			".vscode/*",
			".husky/*",
			".git/*",
			".github/*"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"nursery": {
				"noBannedTypes": "off",
				"useExhaustiveDependencies": "warn"
			},
			"correctness": {
				"noInvalidConstructorSuper": "off",
				"noSetterReturn": "error",
				"noUnsafeFinally": "error",
				"noStringCaseMismatch": "error",
				"noConstructorReturn": "error",
				"noConstAssign": "error",
				"useValidForDirection": "warn"
			},
			"style": {
				"noVar": "error",
				"useEnumInitializers": "off",
				"useDefaultParameterLast": "error",
				"useNumericLiterals": "warn",
				"useConst": "error"
			},
			"complexity": {
				"useFlatMap": "warn"
			},
			"suspicious": {
				"noExtraNonNullAssertion": "error",
				"noDuplicateObjectKeys": "error",
				"useDefaultSwitchClauseLast": "error",
				"noExplicitAny": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": true,
		"indentSize": 2,
		"indentStyle": "space"
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"trailingComma": "all"
		}
	}
}
